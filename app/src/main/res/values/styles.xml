<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeAchieve" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxBackgroundColor">@color/colorIcons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- awal style default    -->
    <style name="TextContentDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContentDefault.white">
        <item name="android:textColor">@color/colorIcons</item>
    </style>
    <!-- akhir style default    -->

    <!-- awal style untuk login   -->
    <style name="TextInputLayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textColorHint">#FFB3B3B3</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- akhir style untuk login   -->

    <!-- start style Simipa modul Orang tua -->
    <!-- style animation dialog-->
    <style name="DialogAnimation_up_down">
        <item name="android:windowEnterAnimation">@anim/anim_simipa_parents_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_simipa_parents_slide_down</item>
    </style>
    <!-- end style Simipa modul Orang tua -->

</resources>
