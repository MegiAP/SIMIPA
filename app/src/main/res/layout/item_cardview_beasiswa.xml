<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#03A9F4"
    card_view:cardCornerRadius="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/img_date"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_beasiswa" />

            <LinearLayout
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_toEndOf="@id/tv_scholarship"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:contentDescription="@string/tanggal"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_jadwal_24dp" />

                <ImageView
                    android:id="@+id/img_ket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_circle_black_24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_scholarship"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_date"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_smstr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/icon"
                android:text="@string/semester"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_smstr"
                android:layout_toEndOf="@id/icon"
                android:text="@string/semester"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tahun"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/icon"
                android:text="@string/status"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/tv_smstr"
                android:text="@string/semester"
                android:textSize="16sp"
                android:textColor="#000" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>