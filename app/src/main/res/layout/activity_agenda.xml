<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.agenda.AgendaActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <RelativeLayout
                android:id="@+id/agenda_kuliah"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_blue"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="3dp"
                android:paddingVertical="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/jadwal_kuliah"
                    android:textSize="16dp"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/close_agenda_kuliah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    android:layout_alignParentRight="true"
                    android:rotation="45"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/agenda_praktikum"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yellow"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="3dp"
                android:paddingVertical="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/jadwal_praktikum"
                    android:textSize="16dp"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/close_agenda_praktikum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    android:layout_alignParentRight="true"
                    android:rotation="45"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/agenda_seminar_kp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_beach"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="3dp"
                android:paddingVertical="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/seminar_kp"
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/close_agenda_kp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    android:layout_alignParentRight="true"
                    android:rotation="45"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/agenda_seminar_usul"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_skies"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="3dp"
                android:paddingVertical="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/seminar_usul"
                    android:textSize="16dp"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/close_usul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    android:layout_alignParentRight="true"
                    android:rotation="45"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/agenda_seminar_hasil"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_gradient"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="3dp"
                android:paddingVertical="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/seminar_hasil"
                    android:textSize="16dp"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/close_hasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    android:layout_alignParentRight="true"
                    android:rotation="45"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/showAll"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_grey"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="3dp"
                android:paddingVertical="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Show All"
                    android:textSize="16dp"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    android:layout_alignParentRight="true"
                    android:rotation="45"/>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontalScroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rv_kuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/tv_agenda_kuliah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_blue"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="@string/jadwal_kuliah"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_college_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_agenda_kuliah"
                tools:listitem="@layout/item_agenda" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_praktikum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_agenda_praktikum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yellow"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="@string/jadwal_praktikum"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_practice_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_agenda_praktikum"
                tools:listitem="@layout/item_agenda"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_kp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_agenda_kp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_beach"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="@string/seminar_kp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_seminarkp_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_agenda_kp"
                tools:listitem="@layout/item_seminar_schedule"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_usul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_agenda_usul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_skies"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="@string/seminar_usul"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_seminarusul_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_agenda_usul"
                tools:listitem="@layout/item_seminar_schedule"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_agenda_hasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_gradient"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="@string/seminar_hasil"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_seminarhasil_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_agenda_hasil"
                tools:listitem="@layout/item_seminar_schedule"/>

        </RelativeLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/pg_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/pg_bar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/pg_bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/pg_bar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/pg_bar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/agendakosong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak ada Agenda"
        android:textStyle="bold"
        android:drawablePadding="@dimen/margin_item"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_new_agenda"
        android:textSize="20sp"/>


</RelativeLayout>