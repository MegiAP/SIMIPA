<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingLeft="4dp"
    tools:context=".ui.recapitulation.DetailSeminarRecapFragment">

    <ImageView
        android:id="@+id/iv_ic_seminar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:foregroundGravity="right|top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_beasiswa"
        android:contentDescription="@string/scholarship" />

    <TextView
        android:id="@+id/df_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:text="@string/jenis_seminar"
        android:gravity="center"/>

    <TextView
        android:id="@+id/df_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/df_jenis"
        android:text="@string/nama_mahasiswa" />

    <TextView
        android:id="@+id/df_npm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:layout_below="@id/df_nama"
        android:text="@string/npm" />

    <TextView
        android:id="@+id/df_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_below="@id/df_npm"
        android:text="@string/judul_seminar" />

    <TextView
        android:id="@+id/df_dosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_below="@id/df_judul"
        android:text="@string/dosen_pembimbing" />

    <TextView
        android:id="@+id/df_ruang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_below="@id/df_dosen"
        android:text="@string/ruang_seminar" />

    <Button
        android:id="@+id/btn_close"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_below="@id/df_ruang"
        android:text="tutup" />

</RelativeLayout>