<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bg_gradient_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_back_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        android:layout_marginStart="@dimen/margin_item"
        android:src="@drawable/ic_arrow_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/TextContentDefault.white"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        android:text="Detail Bimbingan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_back_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/tv_detail_time"
        style="@style/TextContentDefault.white"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        android:layout_marginEnd="@dimen/margin_item"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        android:text="10.00 /"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_back_detail"/>

    <TextView
        android:id="@+id/tv_detail_date"
        style="@style/TextContentDefault.white"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        android:text=" 21-08-2019"
        app:layout_constraintStart_toEndOf="@id/tv_detail_time"
        app:layout_constraintTop_toBottomOf="@id/img_back_detail"/>

    <TextView
        android:id="@+id/tv_detail_title"
        style="@style/TextContentDefault.white"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        android:layout_marginEnd="@dimen/margin_item"
        android:drawableStart="@drawable/ic_book_white"
        android:drawablePadding="4dp"
        android:text="Rancang Bangun SIMIPA"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_detail_lecture"
        style="@style/TextContentDefault.white"
        android:layout_marginEnd="@dimen/margin_item"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_person_outline_white"
        android:drawablePadding="4dp"
        android:text="Ardiansyah, M.Kom."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title" />

    <TextView
        android:id="@+id/tv_detail_room"
        style="@style/TextContentDefault.white"
        android:layout_marginEnd="@dimen/margin_item"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        android:layout_marginTop="4dp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_home_white"
        android:text="Ruang Seminar MIPAT"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_lecture" />

    <TextView
        android:id="@+id/tv_detail_topic"
        style="@style/TextContentDefault.white"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        android:text="Bimbingan Bab 3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_room"/>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_margin_horizontal"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_topic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_blue"
                android:text="Keterangan"
                android:textColor="@color/colorIcons"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/margin_item"
                android:paddingEnd="@dimen/margin_item"
                android:paddingStart="@dimen/margin_item"
                android:paddingTop="@dimen/margin_item"/>

            <TextView
                android:id="@+id/tv_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_item"
                android:layout_marginBottom="@dimen/margin_item"
                android:paddingEnd="@dimen/margin_item"
                android:paddingStart="@dimen/margin_item"
                android:text="@string/dummy_text"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>