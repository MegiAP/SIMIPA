<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_guidance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_margin_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_time1_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_item"
                android:layout_marginEnd="@dimen/margin_item"
                android:text="07.30"
                android:textColor="@color/colorPrimaryText"
                />

            <TextView
                android:id="@+id/tv_strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/activity_margin_horizontal"
                android:layout_marginEnd="@dimen/activity_margin_horizontal"
                android:text="@string/strip"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:layout_below="@id/tv_time1_absent" />

            <TextView
                android:id="@+id/tv_time_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_item"
                android:layout_marginEnd="@dimen/margin_item"
                android:text="10.00"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@id/tv_strip"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="@dimen/margin_item"
            android:layout_marginStart="@dimen/margin_item"
            android:layout_marginTop="@dimen/activity_margin_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_vertical"
                android:layout_marginStart="@dimen/margin_item"
                android:text="Rancang Bangun Aplikasi SIMIPA"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_code_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_item"
                android:text="COM61616163"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_lecture_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/margin_item"
                android:text="Ardiansyah, S.Kom."
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_place_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom= "@dimen/margin_item"
                android:layout_marginStart="@dimen/margin_item"
                android:text="GIK Lt.1C"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/activity_margin_horizontal"
                android:background="@drawable/bg_btn_blue"
                android:text="ABSEN"
                android:textColor="@color/colorIcons"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>